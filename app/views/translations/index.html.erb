<h1>Listing translations</h1>

<table>
  <tr>
    <th>Source</th>
    <th>Target</th>
    <th>Domain</th>
    <th>Public?</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @translations.each do |translation| %>
  <tr>
    <td><%= translation.source.content %></td>
    <td><%= translation.target.content %></td>
    <td><%= translation.domain.content %></td>
    <td><%= translation.is_public ? "Yes" : "No" %></td>
    <td><%= link_to 'Show', translation %></td>
    <td><%= link_to 'Edit', edit_translation_path(translation) %></td>
    <td><%= link_to 'Destroy', translation, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

