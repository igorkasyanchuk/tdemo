.block_header
  %h1 Login

.block
  = simple_form_for :user_session, @user_session, :url => user_session_path do |f|
    = f.error_messages
    = f.input :email, :input_html => { :size => 40 }
    = f.input :password, :input_html => { :size => 40 }
    = f.input :remember_me, :as => :boolean
    = f.submit "Sign in"
  %p.links
    = link_to 'Forgot your password?', new_password_reset_path
  .clear